<launch>
    <node name="controller" pkg="pid" type="controller" ns="tilt_x" output="screen" >
      <param name="Kp" value="0.0" />
      <param name="Ki" value="0.0" />
      <param name="Kd" value="0.0" />
      <param name="upper_limit" value="10" />
      <param name="lower_limit" value="-10" />
      <param name="windup_limit" value="10" />
      <param name="max_loop_frequency" value="50.0" />
      <param name="min_loop_frequency" value="50.0" />
      <remap from="setpoint" to="/body_setpoint_x" />
      <remap from="state" to="/body_tilt_y" />
     </node>


    <node name="controller" pkg="pid" type="controller" ns="tilt_y" output="screen" >
      <param name="Kp" value="0.0" />
      <param name="Ki" value="0.0" />
      <param name="Kd" value="0.0" />
      <param name="upper_limit" value="1.0" />
      <param name="lower_limit" value="-1.0" />
      <param name="windup_limit" value="1" />
      <param name="max_loop_frequency" value="50.0" />
      <param name="min_loop_frequency" value="50.0" />
      <remap from="setpoint" to="/body_setpoint_y" />
      <remap from="state" to="/body_tilt_x" />
      
     </node>

    <!-- rqt_plot is a resource hog, so if you're seeing high CPU usage, don't launch it  -->
    <node name="rqt_plot" pkg="rqt_plot" type="rqt_plot"
    args="/tilt_x/control_effort/data /tilt_x/state/data
    /tilt_y/control_effort/data /tilt_y/state/data /body_setpoint_x/data /body_setpoint_y/data" />

</launch>
